%post
%service_add_post sipwitch.service
%{__chmod} 04755 %{_bindir}/sippasswd
%set_permissions /usr/bin/sippasswd

%preun
%service_del_preun sipwitch.service

%postun
%service_del_postun sipwitch.service

%changelog

